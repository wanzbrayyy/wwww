<%- include('../partials/header') %>

<div class="dashboard-wrapper">
    <%- include('../partials/navbar') %>

    <main class="main-content">
        <header class="top-header">
            <div style="display:flex;align-items:center;">
                <button id="sidebarCollapse" class="hamburger"><i class="fa-solid fa-bars"></i></button>
                <div class="breadcrumb"><h2>Detail Produk</h2></div>
            </div>
        </header>

        <div class="content-card">
            <div class="card-body">
                <div style="display:flex; gap:30px; flex-wrap:wrap;">
                    <div style="flex:1; min-width:300px;">
                        <img src="<%= product.image %>" style="width:100%; border-radius:10px; border:1px solid var(--glass-border);">
                    </div>
                    <div style="flex:1.5; min-width:300px;">
                        <h1 style="font-size:28px; margin-bottom:10px;"><%= product.name %></h1>
                        <div style="display:flex; gap:15px; margin-bottom:20px; font-size:14px; color:var(--text-muted);">
                            <span><i class="fa-solid fa-tag"></i> <%= product.category %></span>
                            <span><i class="fa-solid fa-star text-warning"></i> <%= product.averageRating.toFixed(1) %> (<%= product.reviews.length %>)</span>
                            <span><i class="fa-solid fa-bag-shopping"></i> <%= product.sold %> Terjual</span>
                        </div>

                        <% if(product.flashSaleEnd > new Date() && product.flashSalePrice > 0) { %>
                            <div style="background:#ef4444; color:white; padding:8px 15px; border-radius:50px; display:inline-block; font-weight:600; font-size:12px; margin-bottom:10px;">
                                <i class="fa-solid fa-bolt"></i> FLASH SALE: Berakhir <%= new Date(product.flashSaleEnd).toLocaleString('id-ID') %>
                            </div>
                            <h2 style="color:#ef4444; text-decoration:line-through; font-size:18px;">Rp <%= product.price.toLocaleString('id-ID') %></h2>
                            <h2 style="color:#34d399; font-size:32px; font-family:monospace; margin-bottom:20px;">Rp <%= product.flashSalePrice.toLocaleString('id-ID') %></h2>
                        <% } else { %>
                            <% 
                                let finalPrice = product.price;
                                if(user.rank === 'Silver') finalPrice *= 0.98;
                                if(user.rank === 'Gold') finalPrice *= 0.95;
                            %>
                            <% if(finalPrice < product.price) { %>
                                <small style="color:#fbbf24; font-weight:600;"><i class="fa-solid fa-crown"></i> Harga Rank <%= user.rank %></small>
                                <h2 style="color:#34d399; font-size:32px; font-family:monospace; margin-bottom:5px;">Rp <%= Math.ceil(finalPrice).toLocaleString('id-ID') %></h2>
                                <small style="text-decoration:line-through; color:var(--text-muted)">Rp <%= product.price.toLocaleString('id-ID') %></small>
                            <% } else { %>
                                <h2 style="color:#34d399; font-size:32px; font-family:monospace; margin-bottom:20px;">Rp <%= product.price.toLocaleString('id-ID') %></h2>
                            <% } %>
                        <% } %>
                        
                        <div style="background:rgba(255,255,255,0.05); padding:15px; border-radius:8px; margin:20px 0; display:flex; align-items:center; gap:15px;">
                            <img src="<%= product.seller.profile_pic %>" style="width:40px; height:40px; border-radius:50%;">
                            <div>
                                <div style="font-weight:600;"><%= product.seller.fullname %> 
                                    <% if(product.seller.isVerified) { %><i class="fa-solid fa-circle-check text-info"></i><% } %>
                                </div>
                                <a href="/marketplace/store/<%= product.seller._id %>" style="font-size:12px; color:var(--neon-blue);">Kunjungi Toko</a>
                            </div>
                            <% if(user.id !== product.seller._id.toString()) { %>
                                <a href="/chat/<%= product.seller._id %>" class="btn-primary" style="width:auto; margin-left:auto; background:rgba(255,255,255,0.1);">
                                    <i class="fa-regular fa-comments"></i> Chat
                                </a>
                            <% } %>
                        </div>

                        <form action="/marketplace/buy/<%= product._id %>" method="POST" onsubmit="return confirm('Beli produk ini?')">
                            <div class="form-group">
                                <label style="font-size:12px;">Kode Voucher (Opsional)</label>
                                <div style="display:flex; gap:10px;">
                                    <input type="text" name="voucherCode" class="form-control" placeholder="Masukkan kode promo">
                                </div>
                            </div>
                            <button class="btn-primary" style="padding:15px; font-size:16px;">
                                <i class="fa-solid fa-cart-shopping"></i> Beli Sekarang
                            </button>
                        </form>
                        
                        <p style="font-size:12px; color:var(--text-muted); margin-top:10px; text-align:center;">
                            <i class="fa-solid fa-bolt"></i> <%= product.deliveryType === 'auto' ? 'Pengiriman Otomatis ke Email' : 'Pengiriman Manual oleh Penjual' %>
                        </p>

                        <div style="margin-top:30px; border-top:1px solid var(--glass-border); padding-top:20px;">
                            <h3 style="font-size:18px;">Deskripsi</h3>
                            <p style="color:#cbd5e1; line-height:1.6; white-space:pre-wrap;"><%= product.description %></p>
                        </div>
                    </div>
                </div>

                <div style="margin-top:50px; border-top:1px solid var(--glass-border); padding-top:30px;">
                    <h3>Ulasan Pembeli</h3>
                    <% if(hasBought && !product.reviews.find(r => r.user._id.toString() === user.id)) { %>
                        <form action="/marketplace/review/<%= product._id %>" method="POST" style="background:rgba(255,255,255,0.05); padding:20px; border-radius:10px; margin:20px 0;">
                            <h4>Tulis Ulasan</h4>
                            <div class="form-group">
                                <select name="rating" class="form-control" style="width:100px;">
                                    <option value="5">⭐⭐⭐⭐⭐</option>
                                    <option value="4">⭐⭐⭐⭐</option>
                                    <option value="3">⭐⭐⭐</option>
                                    <option value="2">⭐⭐</option>
                                    <option value="1">⭐</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <textarea name="comment" class="form-control" placeholder="Bagaimana produk ini?" rows="2"></textarea>
                            </div>
                            <button class="btn-primary" style="width:auto;">Kirim Ulasan</button>
                        </form>
                    <% } %>

                    <div style="display:flex; flex-direction:column; gap:15px; margin-top:20px;">
                        <% if(product.reviews.length > 0) { %>
                            <% product.reviews.forEach(review => { %>
                                <div style="background:rgba(0,0,0,0.2); padding:15px; border-radius:8px;">
                                    <div style="display:flex; justify-content:space-between;">
                                        <div style="display:flex; gap:10px; align-items:center;">
                                            <img src="<%= review.user.profile_pic %>" style="width:30px; height:30px; border-radius:50%;">
                                            <span style="font-weight:600; font-size:14px;"><%= review.user.username %></span>
                                        </div>
                                        <span style="color:#fbbf24;"><i class="fa-solid fa-star"></i> <%= review.rating %></span>
                                    </div>
                                    <p style="margin-top:10px; font-size:14px; color:#e2e8f0;"><%= review.comment %></p>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <p style="color:var(--text-muted);">Belum ada ulasan.</p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
<%- include('../partials/footer') %>