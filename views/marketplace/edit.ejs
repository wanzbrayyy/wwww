<%- include('../partials/header') %>

<div class="dashboard-wrapper">
    <%- include('../partials/navbar') %>
    <main class="main-content">
        <header class="top-header">
            <div style="display:flex;align-items:center;">
                <button id="sidebarCollapse" class="hamburger"><i class="fa-solid fa-bars"></i></button>
                <div class="breadcrumb"><h2>Edit Produk</h2></div>
            </div>
            <form action="/marketplace/delete/<%= product.id %>" method="POST" onsubmit="return confirm('Hapus produk permanen?')">
                <button class="btn-primary" style="background:#ef4444; width:auto; font-size:12px;">
                    <i class="fa-solid fa-trash"></i> Hapus
                </button>
            </form>
        </header>

        <div class="content-card" style="max-width:900px;">
            <div class="card-body">
                <form action="/marketplace/edit/<%= product.id %>" method="POST" enctype="multipart/form-data" onsubmit="prepareSubmission()">
                    
                    <div class="form-group" style="display:flex; align-items:center; gap:10px; background:rgba(255,255,255,0.05); padding:10px; border-radius:8px;">
                        <label style="margin:0; flex:1;">Status Publikasi</label>
                        <div style="display:flex; gap:15px;">
                            <label><input type="radio" name="isActive" value="true" <%= product.isActive ? 'checked' : '' %>> Aktif</label>
                            <label><input type="radio" name="isActive" value="" <%= !product.isActive ? 'checked' : '' %>> Arsip (Sembunyikan)</label>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group" style="flex:2">
                            <label>Nama Produk</label>
                            <input type="text" name="name" class="form-control" value="<%= product.name %>" required>
                        </div>
                        <div class="form-group" style="flex:1">
                            <label>Kategori</label>
                            <select name="category" class="form-control" required>
                                <option value="script" <%= product.category === 'script' ? 'selected' : '' %>>Script</option>
                                <option value="account" <%= product.category === 'account' ? 'selected' : '' %>>Akun Premium</option>
                                <option value="tutorial" <%= product.category === 'tutorial' ? 'selected' : '' %>>E-Course</option>
                                <option value="tools" <%= product.category === 'tools' ? 'selected' : '' %>>Tools</option>
                                <option value="design" <%= product.category === 'design' ? 'selected' : '' %>>Design</option>
                                <option value="game" <%= product.category === 'game' ? 'selected' : '' %>>Topup</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Tags</label>
                        <input type="text" name="tags" class="form-control" value="<%= product.tags.join(', ') %>">
                    </div>

                    <div class="form-row">
                        <div class="form-group" style="flex:1">
                            <label>Ganti Thumbnail</label>
                            <input type="file" name="image" class="form-control" accept="image/*">
                            <small><a href="<%= product.image %>" target="_blank" style="color:var(--neon-blue)">Lihat Gambar Saat Ini</a></small>
                        </div>
                        <div class="form-group" style="flex:1">
                            <label>Ganti Video</label>
                            <input type="file" name="video" class="form-control" accept="video/mp4,video/webm">
                            <% if(product.videoPreview) { %>
                                <small><a href="<%= product.videoPreview %>" target="_blank" style="color:var(--neon-blue)">Lihat Video</a></small>
                            <% } %>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group" style="flex:1">
                            <label>Harga (IDR)</label>
                            <input type="number" name="price" class="form-control" value="<%= product.price %>" required>
                        </div>
                        <div class="form-group" style="flex:1">
                            <label>Stok</label>
                            <input type="number" name="stock" class="form-control" value="<%= product.stock %>" required>
                        </div>
                    </div>

                    <div class="form-group" style="border:1px solid var(--glass-border); padding:15px; border-radius:8px;">
                        <label style="display:block; margin-bottom:10px; font-weight:600;">Flash Sale</label>
                        <div class="form-row">
                            <div class="form-group" style="flex:1">
                                <label>Harga Diskon (0 = Nonaktif)</label>
                                <input type="number" name="flashSalePrice" class="form-control" value="<%= product.flashSalePrice %>">
                            </div>
                            <div class="form-group" style="flex:1">
                                <label>Mulai</label>
                                <input type="datetime-local" name="flashSaleStart" class="form-control" value="<%= product.flashSaleStart ? new Date(product.flashSaleStart).toISOString().slice(0, 16) : '' %>">
                            </div>
                            <div class="form-group" style="flex:1">
                                <label>Selesai</label>
                                <input type="datetime-local" name="flashSaleEnd" class="form-control" value="<%= product.flashSaleEnd ? new Date(product.flashSaleEnd).toISOString().slice(0, 16) : '' %>">
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Deskripsi</label>
                        <textarea name="description" class="form-control" rows="6" required><%= product.description %></textarea>
                    </div>

                    <div class="form-group" style="background:rgba(59, 130, 246, 0.1); padding:20px; border-radius:12px;">
                        <label style="color:white; font-weight:600; margin-bottom:15px; display:block;">Metode Pengiriman</label>
                        <div style="display:flex; gap:20px; margin-bottom:15px;">
                            <label><input type="radio" name="deliveryType" value="manual" <%= product.deliveryType === 'manual' ? 'checked' : '' %> onchange="toggleDelivery('manual')"> Manual</label>
                            <label><input type="radio" name="deliveryType" value="auto" <%= product.deliveryType === 'auto' ? 'checked' : '' %> onchange="toggleDelivery('auto')"> Otomatis</label>
                        </div>

                        <div id="autoSection" style="display:<%= product.deliveryType === 'auto' ? 'block' : 'none' %>;">
                            <select class="form-control" id="contentSource" onchange="toggleContentSource()" style="margin-bottom:10px;">
                                <option value="text">Edit Link / Teks</option>
                                <option value="file">Upload File Baru</option>
                            </select>

                            <textarea name="deliveryContent" id="finalContent" class="form-control" rows="2" placeholder="Konten produk..."><%= product.deliveryContent || '' %></textarea>

                            <div id="ajaxUploadDiv" style="display:none; margin-top:10px; border:1px dashed var(--glass-border); padding:15px;">
                                <input type="file" id="fileInput" class="form-control" accept=".zip,.rar,.pdf,.txt">
                                <div id="progressContainer" style="display:none; margin-top:10px;">
                                    <div style="height:5px; background:rgba(255,255,255,0.1);"><div id="progressBar" style="width:0%; height:100%; background:#3b82f6;"></div></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <button class="btn-primary" style="margin-top:20px;" id="submitBtn">
                        <i class="fa-solid fa-save"></i> Simpan Perubahan
                    </button>
                </form>
            </div>
        </div>
    </main>
</div>

<script>
    function toggleDelivery(type) {
        document.getElementById('autoSection').style.display = type === 'auto' ? 'block' : 'none';
    }

    function toggleContentSource() {
        const type = document.getElementById('contentSource').value;
        document.getElementById('ajaxUploadDiv').style.display = type === 'file' ? 'block' : 'none';
        document.getElementById('finalContent').readOnly = (type === 'file');
    }

    document.getElementById('fileInput').addEventListener('change', function() {
        if (this.files.length === 0) return;
        const file = this.files[0];
        const formData = new FormData();
        formData.append('file', file);
        document.getElementById('progressContainer').style.display = 'block';
        document.getElementById('submitBtn').disabled = true;

        const xhr = new XMLHttpRequest();
        xhr.open('POST', '/marketplace/api/upload', true);
        xhr.upload.onprogress = function(e) {
            if (e.lengthComputable) {
                document.getElementById('progressBar').style.width = Math.round((e.loaded / e.total) * 100) + '%';
            }
        };
        xhr.onload = function() {
            if (xhr.status === 200) {
                const res = JSON.parse(xhr.responseText);
                if (res.success) document.getElementById('finalContent').value = res.url;
            }
            document.getElementById('submitBtn').disabled = false;
        };
        xhr.send(formData);
    });
</script>

<%- include('../partials/footer') %>