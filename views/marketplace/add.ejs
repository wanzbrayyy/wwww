<%- include('../partials/header') %>

<div class="dashboard-wrapper">
    <%- include('../partials/navbar') %>
    <main class="main-content">
        <header class="top-header">
            <div style="display:flex;align-items:center;">
                <button id="sidebarCollapse" class="hamburger"><i class="fa-solid fa-bars"></i></button>
                <div class="breadcrumb"><h2>Jual Produk Baru</h2></div>
            </div>
        </header>

        <div class="content-card" style="max-width:900px;">
            <div class="card-body">
                <form action="/marketplace/add" method="POST" enctype="multipart/form-data" onsubmit="prepareSubmission()">
                    
                    <div class="form-row">
                        <div class="form-group" style="flex:2">
                            <label>Nama Produk</label>
                            <input type="text" name="name" class="form-control" required placeholder="Nama produk...">
                        </div>
                        <div class="form-group" style="flex:1">
                            <label>Kategori</label>
                            <select name="category" class="form-control" required>
                                <option value="script">Script</option>
                                <option value="account">Akun Premium</option>
                                <option value="tutorial">E-Course</option>
                                <option value="tools">Tools / Software</option>
                                <option value="design">Asset Design</option>
                                <option value="game">Topup / Voucher</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Tags (SEO)</label>
                        <input type="text" name="tags" class="form-control" placeholder="Contoh: murah, script, premium (pisahkan koma)">
                    </div>

                    <div class="form-row">
                        <div class="form-group" style="flex:1">
                            <label>Thumbnail (Wajib)</label>
                            <input type="file" name="image" class="form-control" accept="image/*" required>
                        </div>
                        <div class="form-group" style="flex:1">
                            <label>Video Preview (Opsional)</label>
                            <input type="file" name="video" class="form-control" accept="video/mp4,video/webm">
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group" style="flex:1">
                            <label>Harga (IDR)</label>
                            <input type="number" name="price" class="form-control" required min="0" placeholder="0">
                        </div>
                        <div class="form-group" style="flex:1">
                            <label>Stok Awal</label>
                            <input type="number" name="stock" class="form-control" required min="0" value="999">
                        </div>
                    </div>

                    <div class="form-group" style="border:1px solid var(--glass-border); padding:15px; border-radius:8px;">
                        <label style="display:block; margin-bottom:10px; font-weight:600;">Grosir (Wholesale)</label>
                        <div id="wholesaleContainer"></div>
                        <button type="button" class="btn-primary" style="padding:5px 10px; font-size:12px; width:auto; margin-top:10px;" onclick="addWholesaleRow()">
                            <i class="fa-solid fa-plus"></i> Tambah Harga Grosir
                        </button>
                        <input type="hidden" name="wholesalePrices" id="wholesaleInput">
                    </div>

                    <div class="form-group" style="border:1px solid var(--glass-border); padding:15px; border-radius:8px;">
                        <div style="display:flex; justify-content:space-between; cursor:pointer;" onclick="toggleFlashSale()">
                            <label style="margin:0; cursor:pointer;">Atur Flash Sale (Diskon)</label>
                            <i class="fa-solid fa-chevron-down"></i>
                        </div>
                        <div id="flashSaleSection" style="display:none; margin-top:15px;">
                            <div class="form-row">
                                <div class="form-group" style="flex:1">
                                    <label>Harga Coret (Diskon)</label>
                                    <input type="number" name="flashSalePrice" class="form-control" placeholder="0">
                                </div>
                                <div class="form-group" style="flex:1">
                                    <label>Mulai</label>
                                    <input type="datetime-local" name="flashSaleStart" class="form-control">
                                </div>
                                <div class="form-group" style="flex:1">
                                    <label>Selesai</label>
                                    <input type="datetime-local" name="flashSaleEnd" class="form-control">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group" style="border:1px solid var(--glass-border); padding:10px; border-radius:8px;">
                        <div style="display:flex;align-items:center;gap:10px;">
                            <input type="checkbox" name="isPreorder" id="poCheck" onchange="document.getElementById('poDate').style.display=this.checked?'block':'none'">
                            <label for="poCheck" style="margin:0;">Produk Pre-order</label>
                        </div>
                        <input type="date" name="releaseDate" id="poDate" class="form-control" style="display:none; margin-top:10px;">
                    </div>

                    <div class="form-group">
                        <label>Deskripsi Lengkap</label>
                        <textarea name="description" class="form-control" rows="6" required></textarea>
                    </div>
                    
                    <div class="form-group" style="background:rgba(59, 130, 246, 0.1); padding:20px; border-radius:12px; border:1px solid rgba(59, 130, 246, 0.3);">
                        <label style="color:white; font-weight:600; margin-bottom:15px; display:block;">Pengiriman Produk</label>
                        
                        <div style="display:flex; gap:20px; margin-bottom:15px;">
                            <label style="cursor:pointer; display:flex; align-items:center; gap:8px;">
                                <input type="radio" name="deliveryType" value="manual" checked onchange="toggleDelivery('manual')"> 
                                Manual (Via Chat)
                            </label>
                            <label style="cursor:pointer; display:flex; align-items:center; gap:8px;">
                                <input type="radio" name="deliveryType" value="auto" onchange="toggleDelivery('auto')"> 
                                Otomatis (Instan)
                            </label>
                        </div>

                        <div id="autoSection" style="display:none;">
                            <div class="form-group">
                                <select class="form-control" id="contentSource" onchange="toggleContentSource()">
                                    <option value="text">Input Link / Teks</option>
                                    <option value="file">Upload File Produk</option>
                                </select>
                            </div>

                            <textarea name="deliveryContent" id="finalContent" class="form-control" rows="2" placeholder="Link download atau data akun..."></textarea>

                            <div id="ajaxUploadDiv" style="display:none; margin-top:10px; border:1px dashed var(--glass-border); padding:15px; border-radius:8px;">
                                <input type="file" id="fileInput" class="form-control" accept=".zip,.rar,.pdf,.txt">
                                <div id="progressContainer" style="display:none; margin-top:10px;">
                                    <div style="height:5px; background:rgba(255,255,255,0.1); border-radius:5px;">
                                        <div id="progressBar" style="width:0%; height:100%; background:#3b82f6;"></div>
                                    </div>
                                    <small id="uploadStatus">Uploading...</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <button class="btn-primary" style="margin-top:20px;" id="submitBtn">
                        <i class="fa-solid fa-paper-plane"></i> Posting Produk
                    </button>
                </form>
            </div>
        </div>
    </main>
</div>

<script>
    function toggleDelivery(type) {
        const autoSection = document.getElementById('autoSection');
        autoSection.style.display = type === 'auto' ? 'block' : 'none';
        document.getElementById('finalContent').required = (type === 'auto');
    }

    function toggleFlashSale() {
        const fs = document.getElementById('flashSaleSection');
        fs.style.display = fs.style.display === 'none' ? 'block' : 'none';
    }

    function toggleContentSource() {
        const type = document.getElementById('contentSource').value;
        const uploadDiv = document.getElementById('ajaxUploadDiv');
        const finalContent = document.getElementById('finalContent');

        if (type === 'file') {
            uploadDiv.style.display = 'block';
            finalContent.readOnly = true;
            finalContent.placeholder = "URL File akan muncul otomatis...";
        } else {
            uploadDiv.style.display = 'none';
            finalContent.readOnly = false;
            finalContent.placeholder = "Masukkan Link / Data...";
        }
    }

    function addWholesaleRow() {
        const container = document.getElementById('wholesaleContainer');
        const div = document.createElement('div');
        div.className = 'form-row';
        div.style.marginBottom = '10px';
        div.innerHTML = `
            <input type="number" class="form-control ws-qty" placeholder="Min Qty" style="flex:1">
            <input type="number" class="form-control ws-price" placeholder="Harga Satuan" style="flex:1">
            <button type="button" onclick="this.parentElement.remove()" style="background:#ef4444; border:none; color:white; border-radius:5px; padding:0 10px;">
                <i class="fa-solid fa-times"></i>
            </button>
        `;
        container.appendChild(div);
    }

    function prepareSubmission() {
        const rows = document.querySelectorAll('#wholesaleContainer .form-row');
        const data = [];
        rows.forEach(row => {
            const qty = row.querySelector('.ws-qty').value;
            const price = row.querySelector('.ws-price').value;
            if(qty && price) data.push({ minQty: parseInt(qty), price: parseInt(price) });
        });
        document.getElementById('wholesaleInput').value = JSON.stringify(data);
    }

    document.getElementById('fileInput').addEventListener('change', function() {
        if (this.files.length === 0) return;
        const file = this.files[0];
        const formData = new FormData();
        formData.append('file', file);

        document.getElementById('progressContainer').style.display = 'block';
        document.getElementById('submitBtn').disabled = true;

        const xhr = new XMLHttpRequest();
        xhr.open('POST', '/marketplace/api/upload', true);
        xhr.upload.onprogress = function(e) {
            if (e.lengthComputable) {
                const pct = Math.round((e.loaded / e.total) * 100);
                document.getElementById('progressBar').style.width = pct + '%';
            }
        };
        xhr.onload = function() {
            if (xhr.status === 200) {
                const res = JSON.parse(xhr.responseText);
                if (res.success) {
                    document.getElementById('finalContent').value = res.url;
                    document.getElementById('uploadStatus').innerText = 'Upload Selesai!';
                }
            }
            document.getElementById('submitBtn').disabled = false;
        };
        xhr.send(formData);
    });
</script>

<%- include('../partials/footer') %>