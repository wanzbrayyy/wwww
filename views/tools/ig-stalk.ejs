<%- include('../partials/header') %>

<div class="dashboard-wrapper">
    <%- include('../partials/navbar') %>

    <main class="main-content">
        <header class="top-header">
            <div style="display:flex;align-items:center;">
                <button id="sidebarCollapse" class="hamburger"><i class="fa-solid fa-bars"></i></button>
                <div class="breadcrumb">
                    <h2>Instagram Tools</h2>
                    <span>Stalker Profil & Downloader</span>
                </div>
            </div>
        </header>

        <div class="content-card" style="max-width: 800px; margin: 0 auto;">
            <div class="card-body">
                <div style="text-align: center; margin-bottom: 30px;">
                    <i class="fa-brands fa-instagram" style="font-size: 48px; background: radial-gradient(circle at 30% 107%, #fdf497 0%, #fdf497 5%, #fd5949 45%,#d6249f 60%,#285AEB 90%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;"></i>
                    <h3 style="margin-top: 10px;">Instagram Master</h3>
                    <p style="color: var(--text-muted); font-size: 14px;">Stalking Profil atau Download Reels/Post</p>
                </div>

                <form action="/tools/ig-stalk" method="POST" onsubmit="showLoading()">
                    <div class="form-group">
                        <div class="input-with-icon">
                            <i class="fa-solid fa-search"></i>
                            <input type="text" name="input" class="form-control" placeholder="Username (jokowi) atau Link (https://...)" required>
                        </div>
                    </div>
                    <button class="btn-primary" type="submit" id="btnSubmit">
                        <i class="fa-solid fa-bolt"></i> Proses Data
                    </button>
                </form>

                <% if (error) { %>
                    <div class="alert alert-danger" style="margin-top: 20px;">
                        <i class="fa-solid fa-circle-exclamation"></i> <%= error %>
                    </div>
                <% } %>

                <!-- HASIL: STALK PROFILE -->
                <% if (result && type === 'stalk') { %>
                    <div style="margin-top: 30px; animation: slideUp 0.5s ease;">
                        <div style="background: var(--glass-bg); padding: 30px; border-radius: 20px; border: 1px solid var(--glass-border); text-align: center;">
                            
                            <!-- Foto Profil -->
                            <div style="position: relative; display: inline-block;">
                                <img src="<%= result.photo %>" style="width: 120px; height: 120px; border-radius: 50%; border: 4px solid var(--neon-blue); object-fit: cover;" onerror="this.src='https://files.catbox.moe/8u328u.png'">
                                
                                <% if(result.verified) { %>
                                    <div style="position: absolute; bottom: 5px; right: 5px; background: #3b82f6; color: white; width: 25px; height: 25px; border-radius: 50%; display: flex; align-items: center; justify-content: center; border: 2px solid #0f172a;">
                                        <i class="fa-solid fa-check" style="font-size: 12px;"></i>
                                    </div>
                                <% } %>
                            </div>
                            
                            <h2 style="margin-top: 15px; margin-bottom: 5px; font-size: 24px;">
                                <%= result.fullname %>
                            </h2>
                            <p style="color: var(--text-muted); font-size: 16px;">
                                <a href="<%= result.url %>" target="_blank" style="color: inherit;">@<%= result.username %></a>
                            </p>
                            
                            <div style="margin: 10px 0;">
                                <% if(result.isPrivate) { %>
                                    <span class="badge bg-danger"><i class="fa-solid fa-lock"></i> Private</span>
                                <% } else { %>
                                    <span class="badge bg-success"><i class="fa-solid fa-lock-open"></i> Public</span>
                                <% } %>
                            </div>

                            <p style="margin-top: 15px; color: #cbd5e1; line-height: 1.6; font-size: 14px; white-space: pre-wrap;">
                                <%= result.bio %>
                            </p>

                            <!-- Statistik -->
                            <div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 10px; margin-top: 25px;">
                                <div style="background: rgba(59, 130, 246, 0.1); padding: 15px; border-radius: 10px; border: 1px solid rgba(59, 130, 246, 0.3);">
                                    <h4 style="margin:0; font-size: 18px; color: #fff;"><%= result.posts.toLocaleString('id-ID') %></h4>
                                    <span style="font-size: 11px; color: var(--text-muted);">Posts</span>
                                </div>
                                <div style="background: rgba(16, 185, 129, 0.1); padding: 15px; border-radius: 10px; border: 1px solid rgba(16, 185, 129, 0.3);">
                                    <h4 style="margin:0; font-size: 18px; color: #fff;"><%= result.followers.toLocaleString('id-ID') %></h4>
                                    <span style="font-size: 11px; color: var(--text-muted);">Followers</span>
                                </div>
                                <div style="background: rgba(245, 158, 11, 0.1); padding: 15px; border-radius: 10px; border: 1px solid rgba(245, 158, 11, 0.3);">
                                    <h4 style="margin:0; font-size: 18px; color: #fff;"><%= result.following.toLocaleString('id-ID') %></h4>
                                    <span style="font-size: 11px; color: var(--text-muted);">Following</span>
                                </div>
                            </div>

                            <a href="<%= result.photo %>" target="_blank" class="btn-primary" style="margin-top: 20px; text-decoration: none; display: block;">
                                <i class="fa-solid fa-download"></i> Download Foto Profil
                            </a>
                        </div>
                    </div>
                <% } %>

                <!-- HASIL: DOWNLOAD MEDIA -->
                <% if (result && type === 'download') { %>
                    <div style="margin-top: 30px; animation: slideUp 0.5s ease;">
                        <div class="alert alert-info"><i class="fa-solid fa-check-circle"></i> Media berhasil diambil!</div>
                        
                        <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(150px, 1fr)); gap: 15px; margin-top: 15px;">
                            <% result.forEach((item, index) => { %>
                                <div style="background: var(--glass-bg); border-radius: 10px; overflow: hidden; border: 1px solid var(--glass-border);">
                                    
                                    <div style="height: 250px; background: #000; display: flex; align-items: center; justify-content: center; overflow: hidden;">
                                        <% if (item.type === 'video') { %>
                                            <video controls style="width: 100%; height: 100%; object-fit: contain;">
                                                <source src="<%= item.url %>" type="video/mp4">
                                                Browser tidak support video.
                                            </video>
                                        <% } else { %>
                                            <img src="<%= item.thumb %>" style="width: 100%; height: 100%; object-fit: cover;" onerror="this.src='https://files.catbox.moe/8u328u.png'">
                                        <% } %>
                                    </div>

                                    <a href="<%= item.url %>" target="_blank" class="btn-primary" style="border-radius: 0; padding: 12px; font-size: 12px; text-decoration: none; display: block; text-align: center;">
                                        <i class="fa-solid fa-download"></i> Download File <%= index + 1 %>
                                    </a>
                                </div>
                            <% }) %>
                        </div>
                    </div>
                <% } %>

            </div>
        </div>
    </main>
</div>

<script>
    function showLoading() {
        const btn = document.getElementById('btnSubmit');
        btn.innerHTML = '<i class="fa-solid fa-spinner fa-spin"></i> Memproses...';
        btn.disabled = true;
        btn.style.opacity = '0.7';
    }
</script>

<style>
    @keyframes slideUp {
        from { transform: translateY(20px); opacity: 0; }
        to { transform: translateY(0); opacity: 1; }
    }
</style>

<%- include('../partials/footer') %>